<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/titleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Movie Name"
            android:background="#CC0033"
            android:textColor="@color/white"
            android:padding="15px"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/infoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleSection"
        android:orientation="vertical">

        <TextView
            android:id="@+id/year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:text="Year: "
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/year"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/director"
            android:layout_below="@id/year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:text="Director: "
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/director1"
            android:layout_below="@id/year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/director"
            android:textColor="@color/white"
            android:textSize="15sp" />


    <TextView
        android:id="@+id/genre"
        android:layout_below="@id/director"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:text="Genre: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/genre1"
        android:layout_below="@id/director1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/director"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/star"
        android:layout_below="@id/genre"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:text="Star: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/star1"
        android:layout_below="@id/genre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/star"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rating"
        android:layout_below="@id/star1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:background="#CC0033"
        android:text="Rating: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ratings"
        android:layout_below="@id/star"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/rating"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/rating1"
        android:layout_below="@id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/ratings"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    </RelativeLayout>
</RelativeLayout>